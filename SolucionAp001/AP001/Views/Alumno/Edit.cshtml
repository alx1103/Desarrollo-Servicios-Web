@model AP001.Models.Alumno

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Actualización de Datos Alumnos</h1>

<h4 class="text-center">Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAlumno" class="control-label"></label>
                <input asp-for="IdAlumno" class="form-control" />
                <span asp-validation-for="IdAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoAlumno" class="control-label"></label>
                <input asp-for="ApellidoAlumno" class="form-control" />
                <span asp-validation-for="ApellidoAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreAlumno" class="control-label"></label>
                <input asp-for="NombreAlumno" class="form-control" />
                <span asp-validation-for="NombreAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EdadAlumno" class="control-label"></label>
                <input asp-for="EdadAlumno" class="form-control" />
                <span asp-validation-for="EdadAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
